datasource db {
  provider = "postgresql"
  url      = env("jdbc:postgresql://projetos-municipais-postgres-db.postgres.database.azure.com:5432/postgres")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id          Int        @id @default(autoincrement())
  nome        String
  email       String     @unique
  senha       String
  projetos    Projeto[]
  Municipio   Municipio? @relation(fields: [municipioId], references: [id])
  municipioId Int?
}

model Projeto {
  id          Int        @id @default(autoincrement())
  nome        String
  descricao   String
  usuario     Usuario    @relation(fields: [usuarioId], references: [id])
  usuarioId   Int
  Municipio   Municipio? @relation(fields: [municipioId], references: [id])
  municipioId Int?
}

model Municipio {
  id   Int    @id @default(autoincrement())
  nome String

  usuarios Usuario[]
  projetos Projeto[]
}
